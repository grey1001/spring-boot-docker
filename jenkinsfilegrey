pipeline {
    agent {
        label 'master_node'
    }
    tools {
        maven 'mymaven'
        dockerTool 'mydocker' // Name of the Docker installation configured in Jenkins
    }
    stages {
        stage('SCM Checkout') {
            steps {
                git url: 'https://github.com/grey1001/spring-boot-docker.git'
            }
        }
        stage("Build") {
            steps {
                sh 'mvn clean package'
            }
        }
        stage("docker build") {
            steps {
                sh 'docker build -t greyspringapp.v1 .'
            }
        }
        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'docker-login') {
                        sh 'docker tag greyabiwon/greyspringapp.v1:latest'
                        sh 'docker push greyabiwon/greyspringapp.v1:latest'
                    }
                }
            }
        }
    }
}
